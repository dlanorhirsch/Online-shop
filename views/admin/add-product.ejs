<link rel="stylesheet" href="/css/main.css">
<link rel="stylesheet" href="/css/forms.css">

    
    <h1>Add-Product Page</h1>
    <main>
        <form class="product-form" action="/add-product" method="POST">
            <div class="form" >

                <label  for="product"  class="form-control" >Product:</label>
                <input  class="form-control" type="text" name="title">

                <label for="imageUrl" class="form-control">Image URL:</label>
                <input  class="form-control" type="text" name="imageUrl">

                <label for="price" class="form-control">Price:</label>
                <input class="form-control" type="number" step="0.01" name="price">

                <label for="description"class="form-control" name="description">Description:</label>
                <textarea class="form-control" type="text" name="description" rows="5"></textarea>
                
                <button type="submit" class="btn" name="cust-btn">Enter</button>
            </div>
            
        </form>
        
    </main>
